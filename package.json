    "axios": "^0.21.1",
    "base64url": "^3.0.1",
    "cockatiel": "^2.0.1",
    "eth-ens-namehash": "^2.0.8",
    "ethers": "^5.4.5",
    "js-sha3": "^0.8.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-strategy": "^1.0.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",

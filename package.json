{
  "name": "passport-did-auth",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "rm -rf dist && rm -rf ethers && npm run build:contracts && npm run build:ts",
    "prepare": "npm run build",
    "example:nest": "npm run build && concurrently -n client,nest -c bgBlue,bgGreen \"npm run example:client\" \"npm run example:server-nest\"",
    "example:express": "npm run build && concurrently -n client,express -c bgBlue,bgGreen \"npm run example:client\" \"npm run example:server-express\"",
    "example:client": "cd examples/client && npm install && npm start",
    "example:server-nest": "cd examples/server/nestjs && npm install && npm start",
    "example:server-express": "cd examples/server/express && npm install && node index.js",
    "build:ts": "tsc",
    "build:contracts": "npm run build:typechain:resolver",
    "build:typechain:resolver": "typechain --target ethers-v4 --outDir ethers './node_modules/@ensdomains/resolver/build/contracts/PublicResolver.json'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/energywebfoundation/passport-did-auth.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/energywebfoundation/passport-did-auth/issues"
  },
  "homepage": "https://github.com/energywebfoundation/passport-did-auth#readme",
  "dependencies": {
    "@ensdomains/resolver": "^0.2.4",
    "@ew-did-registry/did": "0.0.1-alpha.632.0",
    "@ew-did-registry/did-ethr-resolver": "0.0.1-alpha.776.0",
    "@ew-did-registry/did-ipfs-store": "0.0.1-alpha.632.0",
    "axios": "^0.21.0",
    "base64url": "^3.0.1",
    "eth-ens-namehash": "^2.0.8",
    "ethers": "^4.0.45",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-strategy": "^1.0.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@typechain/ethers-v4": "^1.0.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/passport": "^1.0.4",
    "concurrently": "^5.3.0",
    "typechain": "^3.0.0"
  }
}
